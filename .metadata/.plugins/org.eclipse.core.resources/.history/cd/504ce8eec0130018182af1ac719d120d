package exam;

public class Main2 {
	public static void main (String[] args){
		shorten("To jest napis do skrócenia", 8);
		
	}
	
	static String shorten(String str, int length){
		String shorten = "o";
		
		System.out.println("Napis" + str + " poskróceniu o " + length+ "znaków wygląda tak: "+ str.substring(0,length));
		
		return shorten;
	}
}
